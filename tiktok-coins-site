<!-- Modal -->
<div class="modal" id="modal">
  <div class="modal-content">
    <span class="close" id="closeModal">&times;</span>
    <h3>Pagamento Simulado</h3>
    <p>Obrigado por comprar suas Coins!</p>
    <button class="button" onclick="closeModal()">Fechar</button>
  </div>
